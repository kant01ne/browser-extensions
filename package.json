{
  "name": "ext",
  "author": "kant01ne",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "sites/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:firefox": "turbo run build:firefox",
    "dev": "turbo run dev",
    "dev:firefox": "turbo run dev:firefox",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "package": "turbo run package",
    "test": "turbo run test"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "pnpm@7.7.0"
}
